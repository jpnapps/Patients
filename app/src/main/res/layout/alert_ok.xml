<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/top_rlay"
    style="@style/Base_Home.MatchParent"
    android:background="@color/transparent_black_7"
    android:orientation="vertical"
    android:padding="25dp"

    >

    <androidx.cardview.widget.CardView
        style="@style/BASE_CARD_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="6dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:id="@+id/inner_top_llay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"

            android:orientation="vertical"
            android:padding="0dp">

            <RelativeLayout
                android:id="@+id/close_rlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.jpndev.patients.custom.DeviceFitImageView
                    android:id="@+id/right_imv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"

                    android:src="@drawable/ic_close_24"
                    android:visibility="visible"
                    app:width_percentage="8" />
                <!--	<include
                        android:id="@+id/include"
                        layout="@layout/actionbar_white_three_text_image_close"></include>-->
            </RelativeLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animationView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/success_tick_lottie" />

            <TextView
                android:id="@+id/text1_txv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/sucess_dialog_title"
                style="@style/Base_TXV_1"
                android:textSize="@dimen/_22ssp" />

            <TextView
                android:id="@+id/text2_txv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/small_text"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:visibility="visible" />

            <androidx.cardview.widget.CardView
                android:id="@+id/buttonCard"
                style="@style/BASE_CARD_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                app:cardCornerRadius="@dimen/_1sdp"
                app:cardElevation="@dimen/_3sdp"
                app:cardMaxElevation="@dimen/_3sdp"
                app:contentPadding="@dimen/_3sdp"
                app:layout_constraintTop_toBottomOf="@+id/action_bar_rlay">

                <TextView
                    android:id="@+id/ok_txv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerInParent="true"
                    android:gravity="center_horizontal"
                    android:padding="8dp"
                    android:text="@string/okay"
                    android:textColor="@color/app_white_txt"
                    android:textSize="@dimen/sp20" />
            </androidx.cardview.widget.CardView>


            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
