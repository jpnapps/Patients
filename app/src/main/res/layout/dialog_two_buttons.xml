<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="25dp"
    android:id="@+id/top_rlay"
    style="@style/Base_Home.MatchParent"
    android:background="@color/transparent_black_7"
    android:orientation="vertical"

    >

    <androidx.cardview.widget.CardView
        style="@style/BASE_CARD_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        app:cardCornerRadius="6dp"
        app:cardElevation="4dp"
        app:cardMaxElevation="6dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:id="@+id/inner_top_llay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"

            android:orientation="vertical"
            android:padding="0dp">

            <RelativeLayout
                android:id="@+id/close_rlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.jpndev.patients.custom.DeviceFitImageView
                    android:id="@+id/right_imv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/ic_close_24"
                    android:visibility="visible"
                    app:width_percentage="8" />
                <!--	<include
                        android:id="@+id/include"
                        layout="@layout/actionbar_white_three_text_image_close"></include>-->
            </RelativeLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:id="@+id/animation_view"
                app:lottie_rawRes="@raw/delete_lottie"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"/>
            <TextView
                android:id="@+id/text1Txv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/delete_dialog_title"
                style="@style/Base_TXV_1"
                android:textSize="@dimen/_22ssp"
                />

            <TextView
                android:id="@+id/text2Txv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="@string/delete_dialog_message"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp"
                android:visibility="visible"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/leftCard"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    style="@style/BASE_CARD_3"
                    app:cardCornerRadius="@dimen/_1sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardMaxElevation="@dimen/_3sdp"
                    app:contentPadding="@dimen/_3sdp"
                   >

                    <TextView
                        android:id="@+id/leftTxv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:padding="8dp"
                        android:text="@string/cancel"
                        android:textColor="@color/app_white_txt"
                        android:textSize="@dimen/sp20"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/rightCard"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    style="@style/BASE_CARD_3"
                    app:cardCornerRadius="@dimen/_1sdp"
                    app:cardBackgroundColor="@color/mintIcon"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardMaxElevation="@dimen/_3sdp"
                    app:contentPadding="@dimen/_3sdp"
                    >
                    <TextView
                        android:id="@+id/rightTxv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center_horizontal"
                        android:padding="8dp"
                        android:text="@string/delete"
                        android:textColor="@color/app_white_txt"
                        android:textSize="@dimen/sp20"
                        />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
